
vertexlitgeneric
{

	$basetexture  models/jessev92/characters/l4d2/roadcrew/roadwork_green_d
	$bumpmap models/jessev92/characters/l4d2/roadcrew/roadwork_b
	$lightwarptexture dev/identitylightwarp

	$halflambert 1
	$ambientocclusion 1
	$nocull 1

	$phong 1
	// $phongexponent 5
	$phongexponenttexture models/jessev92/detail/x_generic
	$phongalbedotint 1
	$phongboost 10
	$phongfresnelranges "[ 0.5 1 11 ]"

	$detail detail/metal_detail_01
	$detailscale 24
	$detailblendfactor 0.5
	$detailblendmode 0

	// Colour Proxy
	
	$blendtintbybasealpha 1 // alpha channel of $basetexture: color mask.
 	$blendtintcoloroverbase 0 // blend mode.
	
	$PhongBrightnessScalar 0.5 // see below. "0.5" will get overwritten.
	
	Proxies
	{
		WeaponColor
		{
			resultVar	$color2 // pass the player color value to Gmod
			default		0.23 0.35 0.41 // unused for now.
		}
		Clamp // clamp the chosen color between 1% and 125% (usually)
		{
			min 2
			max 3
			srcVar1 "$color2"
			resultVar "$color2"
		}
		Clamp // copy this value to phong tint, clamp it to 50% min.
		{
			min 0.1
			max 0.15
			srcVar1 "$color2"
			resultVar "$phongtint"
		}
		Equals // copy $color2 value to exterior variable. this makes it
		{      // no longer a RGB array but a single float instead (!??)
			srcVar1 "$color2"
			resultVar "$PhongBrightnessScalar"
		}
		Multiply // multiply $phongtint by this new float value.
		{
			srcVar1 "$phongtint"
			srcVar2 "$phongBrightnessScalar"
			resultVar "$phongtint"
		}
		Clamp // the result of this multiply doesn't go any lower than 20%
		{
			min 0.25
			max 1.0
			srcVar1 "$phongtint"
			resultVar "$phongtint"
		}
	}

}
