VertexLitGeneric
{

	$basetexture models/jessev92/characters/bm/sci_glasses_goggles
	$bumpmap dev/bump_normal

	$halflambert 1
	$ambientocclusion 1

	$phong 1
	$phongboost 0.5
	$phongfresnelranges "[ 0.05 0.5 1 ]"

	$rimlight 1
	$rimlightexponent 80
	$rimlightboost 1

	$detail detail/metal_detail_01
	$detailscale 4
	$detailblendfactor  0.7
	$detailblendmode 0

	$proxytoggle 1
	Proxies
	{

		Equals
		{

			srcVar1 $proxytoggle // Disable Proxies
			resultVar $color // The shader parameter to be manipulated

		}

	}

}
