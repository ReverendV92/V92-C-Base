UnlitGeneric
{

	$basetexture models/Kleiner/glasslens
	$bumpmap dev/bump_normal

	$halflambert 1
	$ambientocclusion	1
	$additive 1
	$translucent 1
	$nocull  1

	$detail detail/detaildirt001a
	$detailscale        1
	$detailblendfactor  0.7
	$detailblendmode	0

	$proxytoggle 1
	Proxies
	{

		Equals
		{

			srcVar1 $proxytoggle // Disable Proxies
			resultVar $color // The shader parameter to be manipulated

		}

	}

}
