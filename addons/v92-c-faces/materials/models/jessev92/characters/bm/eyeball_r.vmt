
//	Eyeball, Right, Black Mesa: Source
//	Texture @ BM:S
//	Shaders @ Reverend V92
//	Update: 2017/03/30

"EyeRefract"
{
	"$Iris"               "models/jessev92/characters/bm/eye-iris-brown"   // Iris color in RGB with cornea noise in A
	"$AmbientOcclTexture" "models/jessev92/characters/bm/eye-extra"   // Ambient occlusion in RGB, A unused
	"$Envmap"             "models/jessev92/characters/bm/eye-reflection-cubemap-"    // Reflection environment map
	"$CorneaTexture"      "models/jessev92/characters/bm/eye-cornea"                 // Special texture that has 2D cornea normal in RG and other data in BA
//	"$lightwarptexture"   "models/jessev92/characters/bm/eye_lightwarp"       // This enables TF NPR lighting

	"$EyeballRadius" "0.5" // Default 0.5
	"$AmbientOcclColor" "[0.33 0.33 0.33]"	// Default 0.33, 0.33, 0.33
	"$Dilation" "0.5" // Default 0.5
	"$ParallaxStrength" "0.25"          // Default 0.25
	"$CorneaBumpStrength" "1.0" // Default 1.0

	"$halflambert" "1"
	"$nodecal" "1"

	// These effects are only available in ps.2.0b and later
	"$RaytraceSphere" "0" // Default 1 - Enables raytracing in the pixel shader to make the eyeball look round
	"$SphereTexkillCombo" "0" // Default 1 - Enables killing pixels that don't ray-intersect the sphere

	$proxytoggle 1
	Proxies
	{

		Equals
		{

			srcVar1 $proxytoggle // Disable Proxies
			resultVar $color // The shader parameter to be manipulated

		}

	}

}
